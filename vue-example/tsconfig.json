{
	"compilerOptions": {
		"allowJs": false,
		"outDir": "./built/",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es5",
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	]
}